{
  "expo": {
    "name": "Flixerr",
    "description": "An offline-first App to manage your HTPC",
    "version": "1.0.0",
    "privacy": "unlisted",
    "githubUrl": "https://github.com/DiogoAbu/Flixerr",
    "slug": "flixerr",
    "scheme": "flixerr",
    "sdkVersion": "28.0.0",
    "android": {
      "package": "com.madbastards.flixerr",
      "versionCode": 1,
      "permissions": []
    },
    "ios": {
      "bundleIdentifier": "com.madbastards.flixerr",
      "buildNumber": "1.0.0"
    },
    "assetBundlePatterns": ["assets/**/*", "node_modules/@expo/vector-icons/fonts/MaterialCommunityIcons.ttf"],
    "splash": {
      "backgroundColor": "#202327"
    },
    "updates": {
      "enabled": true,
      "checkAutomatically": "ON_LOAD",
      "fallbackToCacheTimeout": 0
    },
    "packagerOpts": {
      "sourceExts": ["ts", "tsx"],
      "transformer": "node_modules/react-native-typescript-transformer/index.js"
    }
  }
}
